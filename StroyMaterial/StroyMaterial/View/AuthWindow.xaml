<Window x:Class="StroyMaterial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StroyMaterial"
        mc:Ignorable="d"
        Title="Вход" Icon="D:\Suvorov_demo\StroyMaterial\StroyMaterial\img\picture.png" Height="450" Width="400"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Введите логин" HorizontalAlignment="Center" FontSize="32" FontFamily="Comic Sans MS"/>
            <TextBox Text="{Binding Login}" Height="50" Margin="10" Background="#FF76E381"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Введите пароль" HorizontalAlignment="Center" FontSize="32" FontFamily="Comic Sans MS"/>
            <PasswordBox Height="50" Margin="10" Background="#FF76E381" Name="password"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Button Content="Войти" Height="50" Width="150" FontFamily="Comic Sans MS" FontSize="24" Margin="10,50,10,10" Background="#FF498C51" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
